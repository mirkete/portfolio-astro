---
import ScrollButton from '../components/ScrollButton.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio Mirko Saenz Valiente - Desarrollador de software" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="/favicon.ico">
		<title>{title}</title>
	</head>
	<body>
		<div class="background"></div>
		<ScrollButton></ScrollButton>
		<div class="container">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	*{
		box-sizing: border-box;
	}
	html, body {
		font-family: "Nunito", sans-serif;
  	font-optical-sizing: auto;
		font-style: normal;
		min-height: 100vh;
		margin: 0;
		color: white;
	}
	.background{
		overflow: hidden;
		z-index: -1;
		position: fixed;
		width: 100%;
		height: 100%;
		background: rgb(10,10,10) radial-gradient(ellipse 80% 80% at 50% -20%, rgba(120,119,198,0.3), rgba(255,255,255,0));
	}
	.container{
		min-height: 100dvh;
		padding: 12px 30px;
		display: flex;
		flex-direction: column;
		padding-bottom: 72px;
		gap: 12px;
	}

	.bigger-text{
		font-size: 2em;
	}

	.big-text{
		font-size: 1.8em;
	}

	.medium-text{
		font-size: 1.5em;
		font-weight: 600;
	}

	.small-text{
		font-size: 0.8em;
		font-weight: 600;
	}

	@media (width >= 650px){
		.container{
			width: 70vw;
			margin: 0 15vw;
			gap: 24px;
		}
	}

	@media (width >= 1200px){
		.bigger-text{
			font-size: 2.5em;
		}

		.big-text{
			font-size: 2em;
		}

		.medium-text{
			font-size: 1.5em;
			font-weight: 600;
		}

		.small-text{
			font-size: 1em;
			font-weight: 600;
		}
	}

	@media (width >= 1600px){
		.container{
			gap: 30px;
			font-size: 120%;
		}

		.small-text{
			font-size: 24px;
			font-weight: 600;
		}
	}
</style>
