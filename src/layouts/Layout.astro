---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="background"></div>
		<div class="container">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Poppins&display=swap')
	
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	*{
		box-sizing: border-box;
	}
	html, body {
		font-family: "Nunito", sans-serif;
  	font-optical-sizing: auto;
		font-style: normal;
		min-height: 100vh;
		margin: 0;
		color: white;
	}
	.background{
		z-index: -1;
		position: fixed;
		width: 100%;
		height: 100%;
		background: rgb(10,10,10) radial-gradient(ellipse 80% 80% at 50% -20%, rgba(120,119,198,0.3), rgba(255,255,255,0));
	}
	.container{
		min-height: 100vh;
		padding: 12px 30px;
		display: flex;
		flex-direction: column;
		padding-bottom: 72px;
		gap: 12px;
	}
	.bigger-text{
		font-size: 36px;
	}

	.big-text{
		font-size: 24px;
	}

	.medium-text{
		font-size: 20px;
		font-weight: 600;
	}

	.small-text{
		font-size: 16px;
		font-weight: 600;
	}

	@media (width >= 650px){
		.container{
			width: 70vw;
			position: absolute;
			left: 50%;
			transform: translate(-50%);
		}
	}

	@media (width >= 1200px){
		.container{
			width: 50vw;
		}
	}
</style>
