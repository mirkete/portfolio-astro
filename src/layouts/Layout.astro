---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	*{
		box-sizing: border-box;
	}
	html, body {
		font-family: system-ui, sans-serif;
		min-height: 100vh;
		margin: 0;
	}
	.container{
		min-height: 100vh;
		padding: 12px 30px;
		display: flex;
		flex-direction: column;
		padding-bottom: 60px;
		gap: 12px;
	}
	.bigger-text{
		font-size: 36px;
	}

	.big-text{
		font-size: 24px;
	}

	.medium-text{
		font-size: 20px;
		font-weight: 550;
		opacity: .7;
	}

	.small-text{
		font-size: 16px;
		font-weight: 600;
	}

	@media (width >= 650px){
		.container{
			width: 70vw;
			position: absolute;
			left: 50%;
			transform: translate(-50%);
		}
	}

	@media (width >= 1200px){
		.container{
			width: 50vw;
		}
	}
</style>
