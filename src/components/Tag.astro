---
const { text, color, icon } = Astro.props

const isRgbColor = color.includes("rgb")
const backgroundColor = isRgbColor ? color.slice(0,-1).concat(", .15)") : color.concat("15")
const backgroundStyle = `background-color:${backgroundColor};`

let tagStyles = `--color:${backgroundColor}; border:2px solid ${color}; color:${color};`.concat(backgroundStyle)
---

<div class="tag" style={tagStyles}>
    <img class="tag-icon" src={icon} alt="">
    <p class=`small-text tag-text`>{text}</p>
</div>
<style>
    .tag{
        display: flex;
        align-items: center;
        border-radius: 12px;
        gap: 8px;
        padding: 12px 16px;
        transition: transform 0.2s ease;
        cursor: default;
    }

    .tag:hover{
        transform: rotate(-5deg) scale(110%);
        box-shadow: 0px 0px 8px 0px var(--color);
        transition: transform 0.2s ease;
    }

    .tag-icon{
        width: 24px;
    }

    .tag-text{
        margin: 0;
    }

    .no-bg{
        background: none;
        border: none;
    }
</style>